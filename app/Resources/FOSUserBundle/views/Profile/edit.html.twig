{% extends 'Admin/Template/ibox.html.twig' %}

{% block title %}Mon profil{% endblock %}
{% block breadcrumb %}<li class="active">Mon profil</li>{% endblock %}

{% block iboxTitle %}Editer mon profile{% endblock %}
{% block iboxTools %}
    <button id="save" class="btn btn-primary btn-xs m-l-sm" onclick="save()"><i class="fa fa-check"></i> Sauvegarder</button>
    <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary btn-xs m-l-sm" onclick="save()"><i class="fa fa-lock"></i> Changer son Mot de Passe</a>
{% endblock %}

{% block iboxContent %}
    {{ form_start(form) }}
    {{ form_rest(form) }}
    <button type="submit" class="hidden"></button>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        var save = function() {
            $('[name="{{ form.vars.name }}"]').submit();
        };
    </script>
{% endblock %}