{% extends 'Admin/Template/ibox.html.twig' %}

{% block title %}Mon profil{% endblock %}
{% block breadcrumb %}<li><a href="{{ path('fos_user_profile_edit') }}">Mon profil</a></li><li class="active">Réinitialiser mon mot de passe</li>{% endblock %}

{% block iboxTitle %}Réinitialiser mon mot de passe{% endblock %}
{% block iboxTools %}
    <button id="save" class="btn btn-primary btn-xs m-l-sm" onclick="save()"><i class="fa fa-check"></i> Sauvegarder</button>
{% endblock %}

{% block iboxContent %}
    {{ form_start(form) }}
        {{ form_row(form.current_password) }}
        {{ form_row(form.plainPassword) }}<button type="submit" class="hidden"></button>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        var save = function() {
            $('[name="{{ form.vars.name }}"]').submit();
        };
    </script>
{% endblock %}
