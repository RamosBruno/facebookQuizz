{% extends 'Admin/Template/ibox.html.twig' %}

{% block title -%}Rule{% endblock %}
{% block breadcrumb -%}<li><a href="{{ path('admin_rule_index') }}">Rule</a></li><li class="active">Création</li>{% endblock %}

{% block iboxTitle -%}Formulaire de création{% endblock %}
{% block iboxTools -%}<button id="save" class="btn btn-primary btn-xs m-l-sm" onclick="save()"><i class="fa fa-check"></i> Enregistrer</button>{% endblock %}

{% block iboxContent -%}
    {{ form(form) }}
{% endblock %}

{% block javascripts -%}
    <script>
        $(document).ready(function(){
            $('#appbundle_rule_content').summernote({
                defaultFontName: '"Arial Narrow", Arial, Sans-Serif'
            });
            $('.note-fontname').remove();
        });

        $('[name="{{ form.vars.name }}"]').append('<input type="submit" class="hidden" />');
        var save = function() {
            $('[name="{{ form.vars.name }}"]').find('[type="submit"]').trigger('click');
        };
    </script>
{% endblock %}
