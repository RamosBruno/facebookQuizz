{% extends 'Admin/Template/ibox.html.twig' %}

{% block title %}Configuration du site{% endblock %}
{% block breadcrumb %}<li class="active">Configuration du site</li>{% endblock %}

{% block iboxTitle %}Configuration du site{% endblock %}
{% block iboxTools %}<button id="save" class="btn btn-primary btn-xs m-l-sm" onclick="save()"><i class="fa fa-check"></i> Enregistrer</button>{% endblock %}

{% block iboxContent %}
    {{ form(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        var save = function() {
            $('[name="{{ form.vars.name }}"]').submit();
        };
    </script>
{% endblock %}

