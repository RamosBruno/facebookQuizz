{% extends 'Admin/Template/ibox.html.twig' %}

{% block title -%}Quizz{% endblock %}
{% block breadcrumb -%}<li><a href="{{ path('admin_quizz_index') }}">Quizz</a></li><li class="active">Création</li>{% endblock %}

{% block iboxTitle -%}Formulaire de création{% endblock %}
{% block iboxTools -%}<button id="save" class="btn btn-primary btn-xs m-l-sm" onclick="save()"><i class="fa fa-check"></i> Enregistrer</button>{% endblock %}

{% block iboxContent -%}
    {{ form(form) }}
{% endblock %}

{% block javascripts -%}
    <script>
        $('[name="{{ form.vars.name }}"]').append('<input type="submit" class="hidden" />');
        var save = function() {
            $('[name="{{ form.vars.name }}"]').find('[type="submit"]').trigger('click');
        };
    </script>
{% endblock %}
