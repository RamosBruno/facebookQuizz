{% extends 'Admin/Template/ibox.html.twig' %}

{% block title %}Création d'utilisateurs{% endblock %}
{% block breadcrumb %}<li><a href="{{ path('admin_user_index') }}">Utilisateurs</a></li><li class="active">Création</li>{% endblock %}

{% block iboxTitle %}Création d'un nouvel utilisateur{% endblock %}
{% block iboxTools %}<button id="save" class="btn btn-primary btn-xs m-l-sm" onclick="save()"><i class="fa fa-check"></i> Enregistrer</button>{% endblock %}

{% block iboxContent %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_rest(form) }}
        <button type="submit" class="hidden"></button>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        var save = function() {
            $('[name="{{ form.vars.name }}"]').submit();
        };
    </script>
{% endblock %}
